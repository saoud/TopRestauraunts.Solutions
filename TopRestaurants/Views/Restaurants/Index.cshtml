@{
Layout = "_Layout";
}

@using TopRestaurants.Models;
@model List<TopRestaurants.Models.Restaurant>;

<h1>List of Restaurants</h1>

@if (@Model.Count == 0) {
  <h2>No Restuarants have been added yet</h2>
}

<ul>
@foreach (Restaurant restaurant in Model) {
<li>@Html.ActionLink($"{restaurant.Name}", "Details", new {id = restaurant.RestaurantId }) ---- @restaurant.Cuisine.Name </li>
}
</ul>

<p>@Html.ActionLink("Add a new Restaurant", "Create")</p>

<p>@Html.ActionLink("Go home", "Index", "Home")</p>